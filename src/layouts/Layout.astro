---
import ContactSection from '../components/ContactSection/ContactSection.astro';
import NavBar from '../components/NavBar/NavBar.astro';
import '../utils/CustomFonts.css';

interface Props {
  title: string;
}

const {
  title = 'Profesjonalne Usługi Przeciwpożarowe - Zapewnij Bezpieczeństwo | MR-POŻ',
} = Astro.props;
---

<!doctype html>
<html lang='pl'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Zabezpiecz swój dom i biznes z najlepszymi usługami przeciwpożarowymi od MR-POŻ. Oferujemy kompleksowe rozwiązania: instalacje, przeglądy i szkolenia. Dowiedz się więcej!'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="google-site-verification" content="IYvFwSiL6EKFyXlu0O-IxWkY_Ee3Q2h8PRJLp-zZPDQ" />
  </head>
  <body>
    <NavBar />
    <slot />
    <ContactSection />
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src='https://www.googletagmanager.com/ns.html?id=GTM-MGQJN2FR'
        height='0'
        width='0'
        style='display:none;visibility:hidden'></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <!-- Cookie Consent by TermsFeed https://www.TermsFeed.com -->
    <script
      type='text/javascript'
      src='https://www.termsfeed.com/public/cookie-consent/4.1.0/cookie-consent.js'
      charset='UTF-8'></script>
    <script type='text/javascript' charset='UTF-8'>
      document.addEventListener('DOMContentLoaded', function () {
        cookieconsent.run({
          notice_banner_type: 'simple',
          consent_type: 'implied',
          palette: 'light',
          language: 'pl',
          page_load_consent_levels: [
            'strictly-necessary',
            'functionality',
            'tracking',
            'targeting',
          ],
          notice_banner_reject_button_hide: false,
          preferences_center_close_button_hide: false,
          page_refresh_confirmation_buttons: false,
          website_privacy_policy_url: 'https://mr-poz.pl/polityka-prywatnosci/',
        });
      });
    </script>

    <!-- Cookies Banner -->
    <!-- Google Tag Manager -->
    <script type='text/plain' data-cookie-consent='strictly-necessary'>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-MGQJN2FR');
    </script>
    <!-- End Google Tag Manager -->
    <!-- end of Cookies Banner-->

    <noscript
      >Free cookie consent management tool by <a
        href='https://www.termsfeed.com/'>TermsFeed</a
      ></noscript
    >
    <!-- End Cookie Consent by TermsFeed https://www.TermsFeed.com -->

    <!-- Below is the link that users can use to open Preferences Center to change their preferences. Do not modify the ID parameter. Place it where appropriate, style it as needed. -->

    <a href='#' id='open_preferences_center'>Update cookies preferences</a>
  </body>
</html>
<style is:global>
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  :root {
    --main-font: 'Noto Sans', sans-serif;
    --roboto-font: 'Roboto', sans-serif;
    --tilium-bold: 'titillium_webblack', sans-serif;
    --tilium-regular: 'titillium_webregular', sans-serif;
    --bg-darkwh: #f6f0f0;
    --base-wh: hsl(0, 0%, 100%);
    --base-black: hsl(0, 0%, 5%);
    --sub-black: hsl(0, 7.4%, 18.6%);
    --base-red: #a50321;
    --base-gold: rgb(165, 92, 3);
    --line-red: hsl(0, 73%, 61%);
  }
  .active-link {
    color: var(--base-gold);
    font-family: var(--roboto-font);
    text-align: center;
    text-decoration: none;
    min-width: 110px;
    font-weight: 400;
    padding: 0 5px;
    text-transform: uppercase;
    font-size: 1.1rem;
    position: relative;
    transition: 0.1s all ease;
  }
  .sidebar-link-active {
    background-color: var(--base-red);
    line-height: normal;
    font-size: 0.8rem;
    text-transform: uppercase;
    font-family: var(--roboto-font);
    color: var(--base-wh);
    padding: 10px 20px;
    width: 100%;
    display: inline-block;
  }
  .cc-nb-main-container {
    border: 3px solid var(--base-gold);
    padding: 20px !important;
  }
  .termsfeed-com---nb .cc-nb-title {
    color: var(--base-black) !important;
    font-size: 1rem !important;
  }
  .termsfeed-com---nb .cc-nb-text {
    font-size: .7rem !important;
  }
  .cc-nb-okagree {
    background-color: var(--base-gold) !important;
  }
  .termsfeed-com---nb-simple {
    max-width: 100% !important;
  }
  html {
    scroll-padding-top: 30px;
    min-height: 100vh;
    scroll-behavior: smooth;
  }
  body {
    background-color: var(--bg-darkwh);
  }
  a {
    text-decoration: none;
  }
  .sticky-body {
    overflow: hidden;
  }
  @media (max-width: 1300px) {
    .contact-text {
      display: none;
    }
    .active-link {
      font-size: clamp(0.9rem, 1vw, 1rem);
    }
  }
  @media (min-width: 900px) {
    .termsfeed-com---nb-simple {
    max-width: 50% !important;
  }
  }
</style>
