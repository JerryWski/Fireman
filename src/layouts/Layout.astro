---
import ContactSection from '../components/ContactSection/ContactSection.astro';
import NavBar from '../components/NavBar/NavBar.astro';
import '../utils/CustomFonts.css';

interface Props {
  title: string;
}

const {
  title = 'Profesjonalne Usługi Przeciwpożarowe - Zapewnij Bezpieczeństwo | MR-POŻ',
} = Astro.props;
---

<!doctype html>
<html lang='pl'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Zabezpiecz swój dom i biznes z najlepszymi usługami przeciwpożarowymi od MR-POŻ. Oferujemy kompleksowe rozwiązania: instalacje, przeglądy i szkolenia. Dowiedz się więcej!'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <slot />
    <ContactSection />
  </body>
</html>
<style is:global>
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  :root {
    --main-font: 'Noto Sans', sans-serif;
    --roboto-font: 'Roboto', sans-serif;
    --tilium-bold: 'titillium_webblack', sans-serif;
    --tilium-regular: 'titillium_webregular', sans-serif;
    --bg-darkwh: #f6f0f0;
    --base-wh: hsl(0, 0%, 100%);
    --base-black: hsl(0, 0%, 5%);
    --sub-black: hsl(0, 7.4%, 18.6%);
    --base-red: #a50321;
    --base-gold: rgb(165, 92, 3);
    --line-red: hsl(0, 73%, 61%);
  }
  .active-link {
    color: var(--base-gold);
    font-family: var(--roboto-font);
    text-align: center;
    text-decoration: none;
    min-width: 110px;
    font-weight: 400;
    padding: 0 5px;
    text-transform: uppercase;
    font-size: 1.1rem;
    position: relative;
    transition: 0.1s all ease;
  }
  .sidebar-link-active {
    background-color: var(--base-red);
    line-height: normal;
    font-size: .8rem;
    text-transform: uppercase;
    font-family: var(--roboto-font);
    color: var(--base-wh);
    padding: 10px 20px;
    width: 100%;
    display: inline-block;
  }
  html {
    scroll-padding-top: 30px;
    min-height: 100vh;
    scroll-behavior: smooth;
  }
  body {
    background-color:var(--bg-darkwh);
  }
  a {
    text-decoration: none;
  }
  .sticky-body {
    overflow: hidden;
  }
  @media (max-width: 1300px) {
    .contact-text {
      display: none;
    }
    .active-link{
      font-size: clamp(0.9rem, 1vw, 1rem);
    }
  }
</style>
