---
import ContactSection from '../components/ContactSection/ContactSection.astro';
import NavBar from '../components/NavBar/NavBar.astro';
import '../utils/CustomFonts.css';

interface Props {
  title: string;
}

const {
  title = 'Usługi przeciwpożarowe, szkolenia BHP, bezpieczeństwo przeciwpożarowe',
} = Astro.props;
---

<!doctype html>
<html lang='pl'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='usługi przeciwpożarowe, przegląd gaśnic, instalacje przeciwpożarowe, konserwacja systemów przeciwpożarowych, audyt bezpieczeństwa pożarowego'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <slot />
    <ContactSection />
  </body>
</html>
<style is:global>
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  :root {
    --main-font: 'Noto Sans', sans-serif;
    --roboto-font: 'Roboto', sans-serif;

    --base-wh: hsl(0, 0%, 100%);
    --base-black: hsl(0, 0%, 5%);
    --sub-black: hsl(0, 7.4%, 18.6%);
    --base-red: #a50321;
    --base-gold: hsl(33, 96%, 33%);
    --line-red: hsl(0, 73%, 61%);
  }
  html {
    min-height: 100vh;
    scroll-behavior: smooth;
  }
  a {
    text-decoration: none;
  }
  .sticky-body {
    overflow: hidden;
  }
</style>
