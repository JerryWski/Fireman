---
interface Props {
  heading: string
 
}

const { heading } = Astro.props;
---

<h1 class='title'>{heading}</h1>

<style>
  .title {
    margin-top: 15px;
    font-size: clamp(1.8rem, 2.5vw, 3rem);
    color: var(--base-wh);
    font-family: var(--main-font);
    margin-bottom: 24px;
  }
</style>
