---
import { Image } from 'astro:assets';

interface Props {
  imgSrc: ImageMetadata;
  title: string;
  description: string;
  alt: string;
}

const { imgSrc, title, description, alt } = Astro.props as Props;
---

<div class='service-card'>
  <Image class='service-img' src={imgSrc} alt={alt} />
  <h2 class='service-title'>{title}</h2>
  <p class='service-text'>{description}</p>
</div>

<style>
  .service-card {
    box-shadow: 0px 4px 19px -17px rgb(136, 135, 135);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    font-family: var(--main-font);
    margin-top: 15px;
    border: none;
    width: 100%;
    word-break: break-word;
    background-color: var(--base-wh);
  }
  .service-title {
    padding: 10px 10px 10px 10px;
    color: var(--base-red);
    font-size: clamp(0.7rem, .7rem + 1vw, 1rem);
    text-wrap: balance;
    text-transform: uppercase;
  }
  .service-text {
    color: var(--sub-black);
    font-size: clamp(0.6rem, 0.8rem, .8rem);
    line-height: 24px;
    padding: 0px 10px 10px 10px;
  }
  .service-img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }
  @media (min-width: 900px) {
    .service-card {
      gap: 10px;
      max-width: 95%;
    }
  }
</style>
