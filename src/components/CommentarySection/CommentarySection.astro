---
import CommentarySwiper from './CommentarySwiper';
import { Icon } from 'astro-icon/components';
---

<section class='commentary-container'>
    <Icon class='commentary-icon' name='comments' width={42} height={42}/>
  <div class='commentary-intro'>
    <h2 class='commentary-header'>Opinie Naszych Klientów</h2>
    <p class='commentary-subheader'>
      Przeczytaj, co nasi klienci mówią o naszej firmie
    </p>
  </div>
  <CommentarySwiper client:only />
</section>

<style>
  .commentary-container {
    padding: 20px;
    display: flex;
    max-width: 1440px;
    margin-top: 100px;
    margin-inline: auto;
    flex-direction: column;
    align-items: center;
  }
  .commentary-icon {
    color: var(--base-gold);
  }
  .commentary-header {
    text-align: center;
    font-size: clamp(2rem, 2vw, 3rem);
    color: var(--base-black);
    font-family: var(--main-font);
    margin-top: 0px;
    margin-bottom: 24px;
  }
  .commentary-intro {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .commentary-subheader {
    font-family: var(--roboto-font);
    color: var(--base-gold);
    font-size: clamp(1rem,1.5vw, 2rem);
  }
</style>
